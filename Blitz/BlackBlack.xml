<?xml version="1.0"?>
<map proto="1.3.0">
    <name>Black Black</name>
    <version>1.0.0</version>
    <objective>Capture the black wool or eliminate the other team.</objective>
    <authors>
        <author>brummy97</author>
        <author>i2</author>
        <author>greekgod04</author>
        <author>Akorlith</author>
        <author>nixter1029</author>
    </authors>
    <rules>
        <rule>Do not black the victory monument</rule>
    </rules>
    <teams>
        <team color="red" max="5">Red Team</team>
        <team color="purple" max="5">Purple Team Team</team>
        <team color="dark blue" max="5">Blue Team</team>
        <team color="orange" max="5">Orange Team</team>
        <team color="blue" max="5">Light Blue Team</team>
        <team color="dark green" max="5">Green Team</team>
        <team color="magenta" max="5">Magenta Team</team>
        <team color="light green" max="5">Lime Green</team>
    </teams>
    <blitz>
        <time>5m</time>
        <lives>1</lives>
    </blitz>
    <timelock>on</timelock>
    <spawns>
        <default yaw="90">
            <cylinder base="2.5,29,116.5" radius="4" height="1" />
        </default>
        <spawn team="red" kit="spawn" yaw="-135">
            <cylinder base="-3.5,1,4.5" radius="0" height="0" />
        </spawn>
        <spawn team="purple" kit="spawn" yaw="-90">
            <cylinder base="-4.5,1,-1.5" radius="0" height="0" />
        </spawn>
        <spawn team="dark blue" kit="spawn" yaw="-45">
            <cylinder base="-3.5,1,-7.5" radius="0" height="0" />
        </spawn>
        <spawn team="orange" kit="spawn" yaw="0">
            <cylinder base="2.5,1,-8.5" radius="0" height="0" />
        </spawn>
        <spawn team="blue" kit="spawn" yaw="45">
            <cylinder base="8.5,1,-7.5" radius="0" height="0" />
        </spawn>
        <spawn team="dark green" kit="spawn" yaw="90">
            <cylinder base="9.5,1,-1.5" radius="0" height="0" />
        </spawn>
        <spawn team="magenta" kit="spawn" yaw="135">
            <cylinder base="8.5,1,4.5" radius="0" height="0" />
        </spawn>
        <spawn team="light green" kit="spawn" yaw="180">
            <cylinder base="2.5,1,5.5" radius="0" height="0" />
        </spawn>
    </spawns>
    <kits>
        <kit name="spawn">
            <item slot="0" enchantment="damage all:69">gold sword</item>
            <item slot="1" enchantment="arrow damage:69">bow</item>
            <item slot="5">arrow</item>
        </kit>
        <kit name="middle">
            <potion duration="60000" amplifier="2">blindness</potion>
            <potion duration="60000" amplifier="2">confusion</potion>
            <potion duration="60000" amplifier="1">slow</potion>
            <potion duration="60000" amplifier="2">jump</potion>
        </kit>
    </kits>
    <killreward>
        <item amount="1">arrow</item>
    </killreward>
    <wools team="red">
        <wool color="black">
            <block>-5,5,5</block>
        </wool>
    </wools>
    <wools team="purple">
        <wool color="black">
            <block>-6,2,-2</block>
        </wool>
    </wools>
    <wools team="dark blue">
        <wool color="black">
            <block>-5,2,-9</block>
        </wool>
    </wools>
    <wools team="orange">
        <wool color="black">
            <block>2,2,-10</block>
        </wool>
    </wools>
    <wools team="blue">
        <wool color="black">
            <block>9,2,-9</block>
        </wool>
    </wools>
    <wools team="dark green">
        <wool color="black">
            <block>10,2,-2</block>
        </wool>
    </wools>
    <wools team="magenta">
        <wool color="black">
            <block>9,2,5</block>
        </wool>
    </wools>
    <wools team="light green">
        <wool color="black">
            <block>2,2,6</block>
        </wool>
    </wools>
    <toolrepair>
        <tool>gold sword</tool>
        <tool>bow</tool>
    </toolrepair>
    <itemremove>
        <item>arrow</item>
    </itemremove>
    <regions>
        <apply kit="middle">
            <cuboid name="middle" min="3,1,-1" max="1,2,-3" />
        </apply>
        <apply block="deny-all" message="No stealing!">
            <rectangle min="oo,oo" max="-oo,-oo" />
        </apply>
    </regions>
</map>
